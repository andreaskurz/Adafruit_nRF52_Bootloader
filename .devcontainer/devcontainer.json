{
  "name": "Bootloader",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  "remoteEnv": {
    "LC_ALL": "C"
  },
  "privileged": true,
  "mounts": [
    "source=/dev,target=/dev,type=bind"
  ],
  "remoteUser": "ubuntu",
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "vadimcn.vscode-lldb",
        "ms-vscode.cmake-tools",
        "twxs.cmake"
      ],
      "settings": {
        "C_Cpp.intelliSenseEngine": "disabled",
        "editor.trimAutoWhitespace": true,
        "editor.formatOnSave": true
      }
    }
  }
}
